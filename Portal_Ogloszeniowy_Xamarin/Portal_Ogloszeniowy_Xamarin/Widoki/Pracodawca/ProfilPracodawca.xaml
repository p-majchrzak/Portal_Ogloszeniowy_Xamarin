<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Portal_Ogloszeniowy_Xamarin.Widoki.Pracodawca.ProfilPracodawca">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Frame BackgroundColor="White" CornerRadius="10">
                    <StackLayout>
                        <Image HorizontalOptions="CenterAndExpand" x:Name="zdjecie" WidthRequest="90" HeightRequest="90"></Image>
                        <Label HorizontalOptions="CenterAndExpand" x:Name="nazwaFirmy" FontSize="24" FontAttributes="Bold"></Label>
                        <Label HorizontalOptions="CenterAndExpand" x:Name="adresFirmy" FontSize="24"></Label>
                        <Label  HorizontalOptions="CenterAndExpand" x:Name="emailFirmy" FontSize="20"></Label>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>